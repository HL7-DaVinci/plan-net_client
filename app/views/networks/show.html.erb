<section class='container'>
  <section class='row'>
    <% unless @network.nil? %>
      <div class='col-12'>
        <h2><%= sanitize(@network.name) %></h2>
      </div>
      <div class='col-6' id='map'>
      </div>
      <div class='col-6'>
        <table class='table table-dark'>
          <tr>
            <td>Phone/Fax:</td>
            <td>
              <% @network.telecoms.each do |telecom| %>
                <%= display_telecom(telecom) %><br />
              <% end %>
            </td>
          </tr>
          <tr>
            <td>Locations:</td>
            <td>
              <% @network.addresses.each do |address| %>
                <% address.line.each do |line| %>
                  <%= sanitize(line) %><br />
                <% end %>
                <%= sanitize(address.city) %>, 
                <%= sanitize(address.state) %> 
                <%= display_postal_code(address.postalCode) %><br />
                <br />
              <% end %>
            </td>
          </tr>
          <tr>
            <td>Contact:</td>
            <td>
              <% @network.contacts.each do |contact| %>
                <%= display_human_name(contact.name) %><br />
              <% end %>
            </td>
          </tr>
        </table>
      </div>
    <% else %>
      Not available
    <% end %>
    <%= render 'partials/map' %>
  </section>
</section>
