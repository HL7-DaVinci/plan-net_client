<section class='container'>
	<% if @client %>
		<p class="text-success m-auto client-connected" style='text-align: center'>
			Connected to <%= cookies[:server_url] -%>
		</p>
		<table class="table table-dark md-12">
		<tr>
		<td><%= @endpoints %> Endpoints </td>
		<td><%=@healthCareServices%> Healthcare Services </td>
		<td><%=@insurancePlans%> Insurance Plans</td>
		</tr>
		<tr>
		<td><%=@locations%> Locations</td>
	 	<td><%=@networks%> Networks</td>
		<td><%=@organizations%> Organizations</td>
		</tr>			
		<tr>
		<td><%=@organizationAffiliations%> Organization Affiliations</td>
		<td><%=@practitioners%> Practitioners</td>
		<td><%=@practitionerRoles%> PractitionerRoles</td>
		</tr>			
		</table>
	<%else%>
		<p class="text-danger m-auto" style='text-align: center'>No Connection Established</p>
	<% end %>

	<section class='row col-12'>
		<%= form_tag root_path, method: 'get', class: 'form-inline', id: 'server-form' do %>
			<div class='form-group col-md-10'>
				<%= text_field_tag :server_url, cookies[:server_url], class: 'form-control' %>
			</div>

			<%= button_tag class: 'btn btn-primary col-md-2', id: 'server-url' do %>
				Lookup
			<% end %>
		<% end %>
	</section>
</section>
