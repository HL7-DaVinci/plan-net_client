<div class='container-fluid'>
  <h3 class='row text-white'>Pharmacy Mix</h3>
  <div class='row'>
    <div class='col-3'>
      <%= form_for :pharmacymix, url: search_pharmacymixes_path, remote: true, method: "get" do |f| %>
        <%= f.label :insurance_plan %><br />
        <%= f.select :insurance_plan, @plans, { include_blank: true }, 
                { class: 'custom-select bg-dark text-white' } %>
        <%= f.submit 'Compute Mix', class: 'btn btn-outline-success', id: 'healthcare-service-search-button' %>
      <% end %>
    </div>
    <div class='col-3'>
      <table id="pharmacymixes-table" class="table table-dark">
        </table>
    </div>
  </div>
</div>